#!/usr/bin/env php
<?php
require dirname(__FILE__) . '/../vendor/autoload.php';

$httpClient = new Http\Adapter\Guzzle6\Client();
$deploy = new \Ubi\Deploy\Deploy(
    new \Ubi\Deploy\Service\CloudProvider($httpClient),
    new \Ubi\Deploy\Service\JenkinsManager($httpClient)
);
return $deploy->run();